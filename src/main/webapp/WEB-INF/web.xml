<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <servlet>
    <servlet-name>RuntimePropertyUpdateListenerServlet</servlet-name>
    <servlet-class>org.zeroturnaround.liverebel.example.RuntimePropertyUpdateListenerServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>PropertiesServlet</servlet-name>
    <servlet-class>org.zeroturnaround.liverebel.example.PropertiesServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>RuntimePropertyUpdateListenerServlet</servlet-name>
    <url-pattern>/waitRuntimePropUpdate</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>PropertiesServlet</servlet-name>
    <url-pattern>/properties</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
